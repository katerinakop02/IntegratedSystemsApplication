@model PetAdoption.Domain.DTO.AddToCartDTO

@{
    ViewData["Title"] = "Add Pet to Shopping Cart";
}

<h1>Add Pet to Your Cart</h1>

<div class="container">
    <form method="post" asp-action="AddPetToCart">

        <input type="hidden" asp-for="SelectedProductId" value="@Model.SelectedProductId" class="form-control" />

        <div class="row mt-4">
            <div class="form-group">
                <label class="control-label">Selected Pet</label>
                <input asp-for="SelectedProductName" class="form-control" />
                <span asp-validation-for="SelectedProductName" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-4">
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" type="number" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-4">
            <button type="submit" class="btn btn-success">Add To Cart</button>
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
