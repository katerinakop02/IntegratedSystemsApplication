@model IEnumerable<PetAdoption.Domain.Domain.Pet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.PetImage" class="card-img-top" alt="Pet Image" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Breed</h6>
                    <p class="card-text">Age: @item.Age<br>Gender: @item.Gender<br>Price: $@item.Price</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    <a asp-controller="Pets" asp-action="AddPetToCart" asp-route-id="@item.Id" class="btn btn-success">Add to Cart</a>
                </div>
            </div>
        </div>
    }
</div>